---

<div>
  <ol id="certificates-list" class="relative border-s border-dracula-purple/70">
    {
      certificates.map(({ title, date, description, link, entity }, index) => (
        <li class={`cert-item mb-10 ms-4 ${index > 2 ? "hidden" : ""}`}>
          <div class="absolute w-3 h-3 bg-dracula-purple rounded-full mt-1.5 -start-1.5 border border-dracula-background" />
          <time class="mb-1 text-sm font-normal leading-none text-dracula-orange ">
            {date} - {entity}
          </time>
          <h3 class="text-lg font-semibold text-white">{title}</h3>
          <p class="mb-4 text-base font-normal text-gray-500">{description}</p>
          <a
            href={link}
            target="_blank"
            class="inline-flex items-center px-4 py-2 text-sm rounded-md bg-dracula-comment/20 border border-dracula-purple text-dracula-foreground hover:bg-dracula-comment/30 hover:text-dracula-purple hover:border-dracula-purple hover:scale-105 transition-all duration-300"
          >
            Ver Certificado
          </a>
        </li>
      ))
    }
  </ol>
  <button
    id="toggleButton"
    type="button"
    class="flex items-center gap-2 px-4 py-2 mx-auto text-sm font-medium
           text-white border border-dracula-purple rounded-md cursor-pointer
           bg-transparent transition-all duration-200
           hover:bg-dracula-pink hover:border-dracula-pink hover:text-dracula-background
           hover:scale-105"
  >
    <svg
      class="w-4 h-4"
      xmlns="http://www.w3.org/2000/svg"
      fill="currentColor"
      viewBox="0 0 20 20"
      aria-hidden="true"
    >
      <path
        fill-rule="evenodd"
        d="M10 3a1 1 0 0 1 1 1v5h5a1 1 0 1 1 0 2h-5v5a1 1 0 1 1-2 0v-5H4a1 1 0 1 1 0-2h5V4a1 1 0 0 1 1-1Z"
        clip-rule="evenodd"></path>
    </svg>
    Ver todos los certificados
  </button>
</div>

<script>
  const btn = document.getElementById("toggleButton");
  const items = document.querySelectorAll(".cert-item");
  let showMore = false;

  //TODO: Agregar animación
  if (btn) {
    btn.addEventListener("click", () => {
      showMore = !showMore;
      items.forEach((el, index) => {
        if (index > 2) {
          el.classList.toggle("hidden", !showMore);
        }
      });
      btn.textContent = showMore
        ? "Ver menos certificados"
        : "Ver todos los certificados";
    });
  }
</script>
