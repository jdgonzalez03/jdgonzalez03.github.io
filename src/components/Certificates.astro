    link: "https://www.freecodecamp.org/certification/juang_/javascript-algorithms-and-data-structures",
    entity: "FreeCodeCamp",
  },
  {
    title: "Responsive Web Design",
    date: "Mayo, 2023",
    description:
      "Certificación de FreeCodeCamp que acredita mis habilidades en diseño web responsivo con HTML y CSS.",
    link: "https://www.freecodecamp.org/certification/juang_/responsive-web-design",
    entity: "FreeCodeCamp",
  },
  {
    title: "Front-end Development Libraries",
    date: "Septiembre, 2024",
    description:
      "Certificación de FreeCodeCamp que valida mi conocimiento en librerías front-end como React, Bootstrap, jQuery y Sass.",
    link: "https://www.freecodecamp.org/certification/juang_/front-end-development-libraries",
    entity: "FreeCodeCamp",
  },
  {
